/*-*- mode: css; -*-*/
@import "launcher.rasi"

window {
    /* properties for window widget */
    width:                       500px;
    height:                      220px;
}

mainbox {
    children:                    [ "screenshot-image", "listbox" ];
}

screenshot-image {
    height: 80%;
    margin:                      10px;
    border-radius:               @bd-radius;
    background-color:            transparent;
    background-image:            url("/tmp/screenshot.png", width);
}
