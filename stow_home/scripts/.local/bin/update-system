#!/usr/bin/env bash

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
# Styles
NC='\033[0m' # No Color
BOLD=$(tput bold)
NORMAL=$(tput sgr0)

function print_message() {
    echo -e "${BOLD}${2}==>${NC} ${BOLD}${1}${NORMAL}"
}

function ask {
    read -r -p "${BOLD}:: ${1:-Are you sure?} [Y/n] " response
    case "$response" in
        [nN])
            false
            ;;
        *)
            true
            ;;
    esac
}

if ask "Do you want to update mirrors?"; then
    print_message "Updating mirrors..." ${BLUE}
    doas reflector --latest 5 --sort rate --save /etc/pacman.d/mirrorlist --country France || exit
fi

if ask "Do you want to update archlinux-keyring?"; then
    print_message "Updating archlinux-keyring..." ${BLUE}
    doas pacman --needed --noconfirm -Sy archlinux-keyring || exit
fi

if ask "Do you want to update system and aur packages?"; then
    print_message "Checking for system and aur packages updates..." ${BLUE}
    paru && paru --noconfirm -Scc || exit
fi

if ask "Do you want to update Flatpaks?"; then
    print_message "Checking for Flatpak updates..." ${BLUE}
    flatpak update || exit
fi

if ask "Do you want to update Doom Emacs?"; then
    print_message "Checking for Doom Emacs updates..." ${BLUE}
    doom upgrade && doom sync && doom purge || exit
    systemctl --user restart emacs
fi

if ask "Do you want to update Rust?"; then
    print_message "Checking for Rust updates..." ${BLUE}
    rustup update || exit
fi

print_message "Updates finished" ${GREEN}
