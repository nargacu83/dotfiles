#!/bin/sh

_memory() {
    v=$(free -m | awk '/^Mem:/ {print $3 " MiB / " $2 " MiB"}')

    printf "${v}  "
}

_updates() {
    v=$(checkupdates | wc -l)
    if [ $v -eq 0 ]; then
        printf ""
    else
        printf "${v} MAJs  "
    fi
}

_date() {
    v=$(date +'%a %d %b %Y')
    printf "${v}  "
}

_clock() {
    v=$(date +'%H:%M')
    printf "${v} "
}

interval=0
while true; do

	[ $(($interval % 300)) = 0 ] && _updates=$(_updates)
    interval=$((interval + 1))

    sleep 1 && xsetroot -name "$(_memory)${_updates}$(_date)$(_clock)"
done
